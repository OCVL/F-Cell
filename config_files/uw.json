{
  "version": "0.2",
  "description": "The pipeline and analysis JSON for UW",
  "analysis": {
    "image_format": "{IDnum}_{FOV_Width}X{FOV_Height}_{}_({LocX},{LocY})__{}_{}_ALL_ACQ_AVG.tif",
    "queryloc_format": "{IDnum}_{FOV_Width}X{FOV_Height}_{}_({LocX},{LocY})__{}_{QueryLoc:s?}coords.csv",
    "video_format": "{IDnum}_{FOV_Width}X{FOV_Height}_{}_({LocX},{LocY})__{}_{Month:.1}-{Day:.2}-{} PM{VidNum}_{}_extract_reg_cropped_piped.avi",
    "metadata": {
      "type": "text_file",
      "metadata_format": "{IDnum}_{FOV_Width}X{FOV_Height}_{}__({LocX},{LocY})__{}_{Month:.1}-{Day:.2}-{} PM{VidNum}_{}_extract_reg_cropped_piped.csv",
      "fields_to_load": {
        "framestamps": "FrameStamps"
      },
      "stimulus_sequence": [91,3,306]
    },
    "control": {
      "location": "folder",
      "folder_name": "control"
    },
    "analysis_params": {
      "output_folder": "Results",
      "output_subfolder": true,
      "output_subfolder_method": "DateTime",
      "output_indiv_stdize_orgs": false,
      "output_sum_pop_orgs": false,
      "output_sum_indiv_orgs": false,
      "normalization": {
        "method": "score",
        "rescaled": true,
        "rescale_mean": 70,
        "rescale_std": 35
      },
      "segmentation": {
        "refine_to_ref": true,
        "refine_to_vid": false,
        "radius": "auto",
        "shape": "disk",
        "summary": "mean",
        "pixelwise": false
      },
      "exclusion_criteria": {
        "type": "stim-relative",
        "units": "time",
        "start": -0.2,
        "stop": 0.2,
        "fraction": 0.5
      },
      "standardization": {
        "method": "mean_sub",
        "type": "stim-relative",
        "units": "time",
        "start": -1
      },
      "summary": {
        "method": "rms",
        "control": "subtraction",
        "metrics": {
          "type": ["amp","amp_imp_time", "halfamp_imp_time"],
          "measured": "stim-relative",
          "units": "time",
          "prestim": [-1, 0],
          "poststim": [0, 1]
        }
      }
    },
    "display_params": {
      "debug":{
        "output_norm_video": false,
        "plot_refine_to_ref": false,
        "plot_refine_to_vid": false,
        "plot_pop_extracted_orgs": false,
        "plot_pop_stdize_orgs": false,
        "plot_indiv_stdize_orgs": false,
        "stimulus": true,
        "control": true,
        "axes": {
          "xmin": 0,
          "xmax": 6,
          "ymin": -255,
          "ymax": 255,
          "cmap": "viridis",
          "legend": true
        }
      },
      "pop_summary_overlap": {
        "stimulus": true,
        "control": true,
        "relative": true,
        "pooled": true,
        "annotations": true,
        "cross_group": true,
        "axes": {
          "xmin": 0,
          "xmax": 4,
          "ymin": -5,
          "ymax": 60,
          "cmap": "plasma",
          "legend": true
        }
      },
      "saveas": ["png", "svg"],
      "pause_per_folder": true
    }
  }

}