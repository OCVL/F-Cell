{
  "version": "0.2",
  "description": "A JSON file for loading data from Institute de la Vision in Paris.",
  "preanalysis": {
    "image_format": "{IDnum}_{Year:.4}{Month:.2}{Day:.2}_{Eye}_({LocX},{LocY})_{FOV_Width}x{FOV_Height}_{VidNum}_{Modality}{:.1}_extract_reg_avg.tif",
    "video_format": "{IDnum}_{Year:.4}{Month:.2}{Day:.2}_{Eye}_({LocX},{LocY})_{FOV_Width}x{FOV_Height}_{VidNum}_{Modality}{:.1}_extract_reg_cropped.avi",
    "mask_format": "{IDnum}_{Year:.4}{Month:.2}{Day:.2}_{Eye}_({LocX},{LocY})_{FOV_Width}x{FOV_Height}_{VidNum}_{Modality}{:.1}_extract_reg_cropped_mask.avi",
    "metadata": {
      "type": "text_file",
      "metadata_format": "{IDnum}_{Year:.4}{Month:.2}{Day:.2}_{Eye}_({LocX},{LocY})_{FOV_Width}x{FOV_Height}_{VidNum}_{Modality}{:.1}_extract_reg_cropped.csv",
      "fields_to_load": {
        "framestamps": "OriginalFrameNumber"
      }
    },
    "recursive_search": false,
    "pipeline_params": {
      "gaus_blur": 0.0,
      "mask_roi": {
        "r": 0,
        "c": 0,
        "width": -1,
        "height": -1
      },
      "modalities": ["ch1"],
      "output_folder": "Functional Pipeline",
      "correct_torsion": true,
      "intra_stack_xform": "affine",
      "inter_stack_xform": "affine"
    }
  },
  "analysis": {
    "queryloc_format": "{Modality}_{VidNum}_{IDnum}_mean_imagepoints_noise10.csv",
    "video_format": "SLO_{Modality}_1234_{Eye}_2+0_stat_1_{VidNum}_{IDnum}_deinterlaced_SLO_RegVid.mat",
    "metadata": {
      "video": {
        "fields_to_load": ["data", "frames"],
        "framerate": 30.0
      },
      "query_locations": {
        "fields_to_load": ["X", "Y"]
      },
      "stimulus_sequence": [30, 30, 125]
    },
    "recursive_search": false,
    "control": {
      "location": "folder",
      "folder_name": "control"
    },
    "analysis_params": {
      "modalities": ["ch1"],
      "output_folder": "Results",
      "normalization": {
        "method": "score",
        "rescaled": true,
        "rescale_mean": 70,
        "rescale_std": 35
      },
      "segmentation": {
        "refine_to_ref": true,
        "refine_to_vid": false,
        "radius": "auto",
        "shape": "disk",
        "summary": "mean",
        "pixelwise": false
      },
      "exclusion_criteria": {
        "type": "stim-relative",
        "units": "time",
        "start": -0.2,
        "stop": 0.2,
        "fraction": 0.2
      },
      "standardization": {
        "method": "mean_sub",
        "type": "stim-relative",
        "units": "time",
        "start": -1
      },
      "summary": {
        "method": "rms",
        "control": "subtraction",
        "metrics": {
          "type": ["amp", "logamp"],
          "measured": "stim-relative",
          "units": "time",
          "prestim": [-1, 0],
          "poststim": [0, 1]
        },
        "indiv_cutoff": 5
      },
      "gaus_blur": 0.0,
      "mask_roi": {
        "r": 0,
        "c": 0,
        "width": -1,
        "height": -1
      }
    },
    "display_params": {
      "pop_summary_overlap": {
        "stimulus": true,
        "control": true,
        "relative": true,
        "pooled": true,
        "axes": {
          "xmin": 0,
          "xmax": 4,
          "ymin": 0,
          "ymax": 60,
          "legend": true
        }
      },
      "pop_summary_seq": {
        "stimulus": false,
        "relative": false,
        "num_in_seq": 8,
        "axes": {
          "xmin": 0,
          "xmax": 4,
          "ymin": 0,
          "ymax": 60,
          "legend": true
        }
      },
      "indiv_summary_overlap": {
        "stimulus": false,
        "control": false,
        "relative": false,
        "axes": {
          "xmin": null,
          "xmax": null,
          "ymin": null,
          "ymax": null
        }
      },
      "indiv_summary": {
        "histogram": true,
        "cumulative_histogram": true,
        "map_overlay": true,
        "axes": {
          "xmin": null,
          "xstep": null,
          "xmax": null,
          "cmap": "plasma",
          "legend": true
        }
      },
      "saveas": ["png", "svg"],
      "pause_per_folder": false
    }
  }

}