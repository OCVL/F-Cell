{
  "version": "0.2",
  "description": "A JSON file for loading data from Sorbonne University.",
  "preanalysis": {
    "video_format": "SLO_{Modality}_{IDnum}_{Eye}_2+0_stat_1_{VidNum}_deinterlaced_SLO_RegVid.mat",
    "metadata": {
      "video": {
        "fields_to_load": ["data", "frames"],
        "framerate": 37.5
      }
    },
    "pipeline_params": {
      "intra_stack_xform": "affine",
      "inter_stack_xform": "affine",
      "correct_torsion": true
    }
  },
  "analysis": {
    "image_format": "SLO_{Modality}_{IDnum}_{Eye}_2+0_stat_1_{Day:.1}{Month:.1}{Year:.4}_{VidNum}_ALL_ACQ_AVG.tif",
    "queryloc_format": "SLO_{Modality}_{IDnum}_{Eye}_2+0_stat_1_{Day:.1}{Month:.1}{Year:.4}_{VidNum}_ALL_ACQ_AVG_{QueryLocs:s?}coords.csv",
    "video_format": "SLO_{Modality}_{IDnum}_{Eye}_2+0_stat_1_{Day:.1}{Month:.1}{Year:.4}_{VidNum}_PipeVid.avi",
    "metadata": {
      "fields_to_load": {
        "framestamps": "FrameStamps"
      },
      "stimulus_sequence": [74, 36, 75]
    },
    "recursive_search": false,
    "control": {
      "location": "folder",
      "folder_name": "control"
    },
    "analysis_params": {
      "modalities": ["ch1"],
      "output_folder": "Results",
      "normalization": {
        "scope": "signals",
        "method": "mean",
        "rescaled": false
      },
      "segmentation": {
        "refine_to_ref": false,
        "refine_to_vid": false,
        "radius": "auto",
        "shape": "disk",
        "summary": "mean"
      },
      "exclusion_criteria": {
        "type": "stim-relative",
        "units": "time",
        "start": -0.2,
        "stop": 0.2,
        "fraction": 0.2
      },
      "standardization": {
        "method": "stddev",
        "type": "stim-relative",
        "units": "time",
        "start": -2
      },
      "summary": {
        "method": "stddev",
        "control": "none",
        "metrics": {
          "type": ["amp", "logamp"],
          "measured": "stim-relative",
          "units": "time",
          "prestim": [-1, 0],
          "poststim": [0, 1]
        },
        "indiv_cutoff": 5
      }
    },
    "display_params": {
      "debug":{
        "output_norm_video": false,
        "plot_refine_to_ref": false,
        "plot_refine_to_vid": false,
        "plot_pop_extracted_orgs": false,
        "plot_pop_stdize_orgs": false,
        "plot_indiv_stdize_orgs": false,
        "output_indiv_stdize_orgs": false,
        "stimulus": true,
        "control": false,
        "axes": {
          "xmin": 0,
          "xmax": 6,
          "ymin": -255,
          "ymax": 255,
          "cmap": "viridis",
          "legend": true
        }
      },
      "pop_summary_overlap": {
        "stimulus": true,
        "control": true,
        "relative": true,
        "pooled": true,
        "axes": {
          "xmin": null,
          "xmax": null,
          "ymin": null,
          "ymax": null,
          "legend": true
        }
      },
      "pop_summary_seq": {
        "stimulus": false,
        "relative": false,
        "num_in_seq": 8,
        "axes": {
          "xmin": 0,
          "xmax": 5,
          "ymin": 0,
          "ymax": 60,
          "legend": true
        }
      },
      "indiv_summary_overlap": {
        "stimulus": false,
        "control": false,
        "relative": false,
        "axes": {
          "xmin": null,
          "xmax": null,
          "ymin": null,
          "ymax": null
        }
      },
      "indiv_summary": {
        "histogram": true,
        "cumulative_histogram": true,
        "map_overlay": true,
        "axes": {
          "xmin": null,
          "xstep": null,
          "xmax": null,
          "cmap": "plasma",
          "legend": true
        }
      },
      "saveas": ["png", "svg"],
      "pause_per_folder": true
    }
  }

}