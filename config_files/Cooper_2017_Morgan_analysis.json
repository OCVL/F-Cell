{
  "version": "0.1",
  "description": "The pipeline and analysis JSON for the data collected in 2016 as part of Cooper et. al 2017",
  "preanalysis": {
    "video_format": "{}_{IDnum}_{Modality}_{Eye}_{Year:.4}{Month:.2}{Day:.2}_{VidNum}_ref_{}_lps_{}_lbss_{}_sr_n_{}_cropped_{}.avi",
    "metadata": {
      "type": "pickle_file",
      "metadata_format": "{}_{IDnum}_{Modality}_{Eye}_{Year:.4}{Month:.2}{Day:.2}_{VidNum}_ref_{}_lps_{}_lbss_{}.dmp"
    },
    "pipeline_params": {
      "modalities": ["confocal"],
      "output_folder": "Functional Pipeline",
      "group_by": "{Year}{Month}{Day}",
      "correct_torsion": true,
      "flat_field": false,
      "custom": {
        "dewarp": "demotion"
      }
    }
  },
  "analysis": {
    "image_format": "{IDnum}_{Modality}_{Eye}_{Year:.4}{Month:.2}{Day:.2}_{VidNum}_ALL_ACQ_AVG.tif",
    "queryloc_format": "{IDnum}_{Modality}_{Eye}_{Year:.4}{Month:.2}{Day:.2}_{VidNum}_ALL_ACQ_AVG_{QueryLoc:s?}coords.csv",
    "video_format": "{IDnum}_{Modality}_{Eye}_{Year:.4}{Month:.2}{Day:.2}_{VidNum}_piped.avi",
    "metadata": {
      "type": "text_file",
      "metadata_format": "{IDnum}_{Modality}_{Eye}_{Year:.4}{Month:.2}{Day:.2}_{VidNum}_piped.csv",
      "fields_to_load": {
        "framestamps": "FrameStamps"
      },
      "framerate": 16.6,
      "stimulus_sequence": [66, 32, 151]
    },
    "recursive_search": false,
    "control": {
      "location": "folder",
      "folder_name": "control"
    },
    "analysis_params": {
      "modalities": ["confocal"],
      "output_folder": "Results",
      "output_subfolder": true,
      "output_subfolder_method": "DateTime",
      "normalization": {
        "scope": "signals",
        "method": "mean",
        "rescaled": false
      },
      "segmentation": {
        "refine_to_ref": false,
        "refine_to_vid": false,
        "radius": 1,
        "shape": "box",
        "summary": "mean",
        "pixelwise": false
      },
      "exclusion_criteria": {
        "type": "stim-relative",
        "units": "time",
        "start": -1,
        "stop": 1,
        "fraction": 0.1
      },
      "standardization": {
        "method": "stddev",
        "type": "stim-relative",
        "units": "time",
        "start": -4
      },
      "summary": {
        "method": "stddev",
        "control": "subtraction",
        "metrics": {
          "type": ["amp"],
          "measured": "stim-relative",
          "units": "time",
          "prestim": [-1, 0],
          "poststim": [0, 1]
        },
        "indiv_cutoff": 5
      }
    },
    "display_params": {
      "debug":{
        "output_norm_video": false,
        "plot_refine_to_ref": false,
        "plot_refine_to_vid": false,
        "plot_pop_extracted_orgs": false,
        "plot_pop_stdize_orgs": false,
        "plot_indiv_stdize_orgs": false,
        "output_indiv_stdize_orgs": false,
        "stimulus": true,
        "control": true,
        "axes": {
          "xmin": 0,
          "xmax": 15,
          "ymin": -255,
          "ymax": 255,
          "cmap": "viridis",
          "legend": true
        }
      },
      "pop_summary_overlap": {
        "stimulus": true,
        "control": true,
        "relative": true,
        "pooled": true,
        "axes": {
          "xmin": 0,
          "xmax": 16,
          "ymin": -0.5,
          "ymax": 3,
          "cmap": "plasma",
          "legend": true
        }
      },
      "pop_summary_seq": {
        "stimulus": false,
        "relative": false,
        "num_in_seq": 8,
        "axes": {
          "xmin": 0,
          "xmax": 15,
          "ymin": 0,
          "ymax": 10,
          "cmap": "plasma",
          "legend": true
        }
      },
      "indiv_summary_overlap": {
        "stimulus": false,
        "control": false,
        "relative": false,
        "axes": {
          "xmin": null,
          "xmax": null,
          "ymin": null,
          "ymax": null,
          "cmap": "plasma"
        }
      },
      "indiv_summary": {
        "histogram": false,
        "cumulative_histogram": false,
        "map_overlay": true,
        "axes": {
          "xmin": null,
          "xstep": null,
          "xmax": null,
          "cmap": "plasma",
          "legend": true
        }
      },
      "saveas": ["png", "svg"],
      "pause_per_folder": false
    }
  }

}