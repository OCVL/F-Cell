{
  "version": "0.2",
  "description": "The pipeline and analysis JSON for the OCVL's MEAOSLO.",
  "preanalysis": {
    "image_format": "{IDnum}_{Year}{Month}{Day}_{VidNum}_{Modality}",
    "video_format": "{IDnum}_{Year}{Month}{Day}_{VidNum}_{Modality}",
    "mask_format": "{IDnum}_{Year}{Month}{Day}_{VidNum}_{Modality}",
    "metadata": {
      "type": "text_file",
      "metadata_format": "{IDnum}_{Year}{Month}{Day}_{VidNum}_{Modality}",
      "fields_to_load": {
        "framestamps": "OriginalFrameNumber"
      }
    },
    "recursive_search": false,
    "pipeline_params": {
      "gaus_blur": 0.0,
      "mask_roi": {
        "r": 0.0,
        "c": 0.0,
        "width": -1.0,
        "height": -1.0
      },
      "modalities": null,
      "alignment_reference_modality": null,
      "output_folder": null,
      "group_by": "",
      "correct_torsion": true,
      "intra_stack_xform": "affine",
      "inter_stack_xform": "affine",
      "flat_field": false,
	  "custom" : {
		  "dewarp" : "ocvl"
	  },
      "trim": {
        "start_frm": 0.0,
        "end_frm": -1.0
      }
    }
  },
  "analysis": {
    "image_format": "{IDnum}_{Year}{Month}{Day}_{VidNum}_{Modality}",
    "queryloc_format": "{IDnum}_{Year}{Month}{Day}_{VidNum}_{Modality}",
    "video_format": "{IDnum}_{Year}{Month}{Day}_{VidNum}_{Modality}",
    "metadata": {
      "type": "text_file",
      "metadata_format": "{IDnum}_{Year}{Month}{Day}_{VidNum}_{Modality}",
      "stimulus_sequence": "StimulusOn",
      "fields_to_load": {
        "framestamps": "OriginalFrameNumber"
      }
    },
    "recursive_search": false,
    "control": {
      "location": "folder",
      "folder_name": "control"
    },
    "analysis_params": {
      "modalities": null,
      "output_folder": null,
      "output_subfolder": true,
      "output_subfolder_method": "DateTime",
      "output_indiv_stdize_orgs": false,
      "output_sum_pop_orgs": false,
      "output_sum_indiv_orgs": false,
      "normalization": {
        "rescaled": true,
        "rescale_mean": 70.0
      },
      "segmentation": {
        "refine_to_ref": false,
        "refine_to_vid": false,
        "radius": "auto",
        "shape": "disk",
        "summary": "mean",
        "pixelwise": false
      },
      "exclusion_criteria": {
        "type": "stim-relative",
        "units": "time",
        "start": -1.0,
        "stop": 0.0,
        "fraction": 0.3
      },
      "standardization": {
        "method": "mean_sub",
        "type": "stim-relative",
        "units": "time",
        "start": -1.0
      },
      "summary": {
        "method": "rms",
        "control": "none",
        "metrics": {
          "type": null,
          "measured": "stim-relative",
          "units": "time",
          "prestim": [
            -1.0,
            0.0
          ],
          "poststim": [
            0.0,
            1.0
          ]
        },
        "indiv_cutoff": 5
      },
      "gaus_blur": 0.0,
      "mask_roi": {
        "r": 0.0,
        "c": 0.0,
        "width": -1.0,
        "height": -1.0
      }
    },
    "debug": {
      "output_norm_video": false,
      "plot_refine_to_ref": false,
      "plot_refine_to_vid": false,
      "plot_pop_extracted_orgs": false,
      "plot_pop_stdize_orgs": false,
      "plot_indiv_stdize_orgs": false,
      "plot_valid_cells": false,
      "stimulus": true,
      "control": true,
      "axes": {
        "xmin": 0,
        "xmax": 6,
        "ymin": -255,
        "ymax": 255,
        "cmap": "viridis",
        "legend": true
      }
    },
    "display_params": {
      "pop_summary_overlap": {
        "stimulus": true,
        "control": true,
        "relative": true,
        "pooled": true,
        "cross_group": false,
        "annotations": false,
        "axes": {
          "xmin": 0,
          "xmax": 4,
          "ymin": -5,
          "ymax": 60,
          "cmap": "plasma",
          "legend": true
        }
      },
      "pop_summary_seq": {
        "stimulus": true,
        "relative": true,
        "num_in_seq": 8,
        "axes": {
          "xmin": 0,
          "xmax": 4,
          "ymin": 0,
          "ymax": 60,
          "cmap": "plasma",
          "legend": true
        }
      },
      "indiv_summary_overlap": {
        "stimulus": true,
        "control": true,
        "relative": true,
        "axes": {
          "xmin": null,
          "xmax": null,
          "ymin": null,
          "ymax": null,
          "cmap": "plasma"
        }
      },
      "indiv_summary": {
        "histogram": true,
        "cumulative_histogram": true,
        "map_overlay": true,
        "org_video": false,
        "cross_group": false,
        "axes": {
          "xmin": null,
          "xstep": null,
          "xmax": null,
          "cmap": "plasma",
          "legend": true
        }
      },
      "saveas": [],
      "pause_per_folder": true
    }
  }
}